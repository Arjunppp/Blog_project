<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/public/css/adminMainPage.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <a href="blog/logout" class="logout-button" >logout</a>
    <% if (locals.result) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">User Name</th>
                    <th scope="col">View All Post</th>
                    <th scope="col">View User</th>
                    
                </tr>
            </thead>
            <tbody id="admin-table-class">
                <% locals.result.forEach((each) => { %>
                    <tr>
                        <td><%= each.username %></td>
                        <td>
                            <form action="blog/posts/<%= each._id %>" method="GET">
                               <button> <a user-id="<%= each._id %>" class="">View All Post</a></button>
                            </form>
                        </td>
                        <td>
                            <form action="blog/<%= each._id %>" method="GET">
                                <button> <a user-id="<%= each._id %>" class="">View User</a></button>
                             </form>
                           </td>
                       
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>

   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>    
</body>
</html>